<p>
  <strong>Album:</strong>
  <%= @album.name %>
</p>
<% for album in @album.images %>
<p>
  <strong>Album:</strong>
  <%= @album.image %>
</p
<% end %>


<%= link_to 'Edit', edit_album_path(@album) %> 
<%= link_to 'Back', albums_path %>

<div id="paintings">
  <% for album in @album.images %>
    <div class="painting">
      <%= image_tag image.image_url(:thumb) if image.image? %>
      <div class="name"><%= image.name %></div>
      <div class="actions">
        
        <%= link_to "remove", image, :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>

<p>
  <%= link_to "Add a Painting", new_image_path(:album_id => @image) %> |
  <%= link_to "Remove Gallery", @album, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View Galleries", images_path %>
</p>